ul.rating-stars
  margin 0
  padding 0

.rating-stars
  ul > li&__star
    display inline-block
    vertical-align top
    margin 0 2px 0 0

    &:before
      display none

    &:after
       @extend $font-star
       font-size 16px
       color light_gray_color


    &_active
      &:after
        color color_orange