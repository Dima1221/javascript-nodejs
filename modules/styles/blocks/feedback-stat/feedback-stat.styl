.feedback-stat
    padding 40px 35px

    text-align center

    color #fff
    border-radius 4px
    background #20252B

    .main ul&__list,
    .main li&__item
        margin 0
        padding 0

    .main li&__item:before
        display none
        content ''

    .main ul&__list
        position relative

        display inline-block

        padding-right 240px
        margin 0 30px 20px 0

        vertical-align top
        text-align right

    &__item
        font-size 18px

        position relative

        min-height 37px

        cursor pointer
        white-space nowrap
        line-height 37px

        color #fff

    &__item:hover,
    &__item_active
        color #F8AB47

    &__status,
    &__status-i
        position absolute
        left 100%

        width 230px
        height 22px

        background rgba(248,175,71,0.2)
        background-clip content-box
        padding-left 10px

    &__status
        top 50%
        margin-top -11px

    &__status-i
        left 10px
        top 0
        width auto
        padding 0

        background #F8AB47

    & .pie
        display inline-block

        vertical-align top

    @media phone
        .main ul&__list
            padding-right 100px

        &__status,
        &__status-i
            width 90px






