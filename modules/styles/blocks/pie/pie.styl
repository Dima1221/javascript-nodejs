.pie
    position relative

    width 180px
    height 180px

    border-radius 50%

    text-align center

    &__image
        position absolute
        left 0
        top 0

        width 100%
        height 100%

    &__text
        position relative
        top 32px

    &__percents
        font-size 38px

        display block

        line-height 52px

    &__advice
        font-size 13px

        display block

        padding 0 20px

        white-space normal
        line-height 17px

        color rgba(255,255,255,0.4)
