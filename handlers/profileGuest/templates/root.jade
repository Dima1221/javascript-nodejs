extends /layouts/main

block append variables
  - var layout_header_class = "main__header_center"
  - var layout_main_class = "main_width-limit-wide"
  - var sitetoolbar = true


block content

  +b.profile

    +b.profile-photo
      +e.upic(style="background-image: url('" + profileUser.getPhotoUrl(146, 146) + "')")

      if profileUser.teachesCourses && profileUser.teachesCourses.length
        +e.sign
          +e('span').sign-text Преподаватель

    // TODO: добавить реальное условие
    if false
      +e.label
        Новый преподаватель на Javascript.ru, это значит, что размер групп будет существенно меньше.
        На первых занятиях будет присутствовать главный куратор Илья Кантор, а также участники курса смогут
        перевестись в другую группу в случае если уровень обучения не будет соответствовать их ожиданиям.

    +e.content

      if tabs.length == 1
        +e.single-tab-header
      else
        +e.tabs
          each tab, name in tabs
            +e(class=['tab', tab.active && '_current'])
              +e.tab-content
                +e('a').tab-link(href=tab.url)= profileTabNames[name]

      +e.fields

        block profileContent

    block profileFeedback
