ul.courses-slides
  margin 0
  padding 0

.courses-slides
  white-space nowrap
  transform translate3d(0,0,0)
  will-change transform
  transition transform .5s ease

  ul > li&__slide
    margin 0

  &__slide
    background-color background_yellow_dark
    width 100%
    height 220px
    display inline-block
    vertical-align top
    white-space normal
    text-align left

    &:before
      display none

  &__slide-inner
    height 100%
    display flex
    justify-content space-between

  &__review
    background-color background_yellow_light
    width 80%
    padding 21px 33px
    box-sizing border-box
    position relative

    &:after
      position absolute
      content ''
      margin auto
      top 0
      bottom 0
      right 0
      height 0
      width 0
      border-top 13px solid transparent
      border-bottom 13px solid transparent
      border-left 21px solid background_yellow_light

  h3&__title
    display inline-block
    vertical-align
    color gray_color
    font-size 16px
    line-height 22px
    font-weight bold
    margin 0

  ul&__rating
    display inline-block
    vertical-align top
    margin-left 10px
    margin-top 1px

  &__userpic
    width 86px
    height 86px
    border-radius 50%

  &__text
    margin-top 10px
    line-height 19px

  &__more
    display block
    margin-top 10px

  &__author
    box-sizing border-box
    padding 29px 13px
    text-align center

  p&__name
    margin 0 0 6px 0
    font-size 14px
    font-weight bold
