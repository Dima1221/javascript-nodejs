include ../blocks/newsletter-template/index

extends /layouts/main
include /blocks/mdeditor

block append variables
  -
    var sitetoolbar = true
    var header = false
    var layout_main_class = "main_width-limit"
    var layout_header_class = "main__header_center"
    var breadcrumbs = [
      { title: 'Учебник', url: '/' },
      { title: 'Рассылки', url: '/newsletter/admin/newsletter-releases' },
      { title: 'Шаблоны рассылок', url: '/newsletter/admin/newsletter-templates' }
    ]

block sidebar
  include /blocks/sidebar

block append head
  !=js("newsletterAdmin", {defer: true})
  !=css("newsletterAdmin")

block content

  if error
    +b.notification._message._error
      +e.content!= error
      +e('button').close(title="Закрыть")

  +newsletter-template()


