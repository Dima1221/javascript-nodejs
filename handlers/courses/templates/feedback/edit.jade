extends /layouts/main

block append variables
  - var layout_header_class = "main__header_center"
  - var layout_main_class = "main_width-limit"
  - var content_class = '_center'
  - var sitetoolbar = true
  - var siteToolbarCurrentSection = "courses"

block append head
  !=js("coursesFeedbackEdit", {defer: true})

//-
  Поле показывается отдельно, если у него не стоит _editable ИЛИ нажата кнопка Редактировать

block content
  +b.course-feedback._form
    +e('form')(data-feedback-form method="POST").form
      input(type="hidden", name="_csrf", value=csrf())
      +e.line
        +e('h2').title Как вы в целом оцениваете курс?*
        +b.rating-chooser.clearfix
          +e('fieldset').fieldset
            +e('input').input(type="radio" id="star5" name="stars" value="5" hidden checked=(courseFeedback.stars == 5))
            +e('label').label(for="star5" title="Отлично")
              +e('span').label-text Отлично
            +e('input').input(type="radio" id="star4" name="stars" value="4" hidden checked=(courseFeedback.stars == 4))
            +e('label').label(for="star4" title="Хорошо")
              +e('span').label-text Хорошо
            +e('input').input(type="radio" id="star3" name="stars" value="3" hidden checked=(courseFeedback.stars == 3))
            +e('label').label(for="star3" title="Нормально")
              +e('span').label-text Нормально
            +e('input').input(type="radio" id="star2" name="stars" value="2" hidden checked=(courseFeedback.stars == 2))
            +e('label').label(for="star2" title="Так себе")
              +e('span').label-text Так себе
            +e('input').input(type="radio" id="star1" name="stars" value="1" hidden checked=(courseFeedback.stars == 1))
            +e('label').label(for="star1" title="Плохо")
              +e('span').label-text Плохо

      +e.line
        +e('h2').title Порекомендовали бы вы этот курс другим?*
        +e('label').label
          +e('input').input(type="radio" name="recommend" value="1" checked=(courseFeedback.recommend === true))
          | &nbsp;Да
        br
        +e('label').label
          +e('input').input(type="radio" name="recommend" value="0" checked=(courseFeedback.recommend === false))
          | &nbsp;Нет

      +e.line
        +e('h2').title Отзыв*
        +b('textarea').textarea-input.__textarea-head(
          name="content"
          placeholder="Несколько слов о том, насколько полезным курс оказался для вас, доступно ли излагается материал, устраивает ли квалификация ведущего и т.д."
          required
        )= courseFeedback.content

      +e.line
        +e('h2').title
          +e('input').checkbox(type="checkbox" name="isPublic" value="1" checked=courseFeedback.isPublic) Публичный отзыв&nbsp;
          +e('span').title-note (будет опубликован на javascript.ru)

      +e('input').edit-input(type="checkbox" id="edit-input" hidden)

      +e.line._defined
        +e.user
          +e.userpic
            +e('img').userpic-img(src=thumb(courseFeedback.photo || user.getPhotoUrl(), 86, 86))

          +e('span').username
            +e('a').username-link(href=user.getProfileUrl())= participant.fullName

          +e('label').edit(for="edit-input") Редактировать

          if courseFeedback.aboutLink
            +e('span').homepage
              +e('a').homepage-link(href=courseFeedback.aboutLink)= courseFeedback.aboutLink.replace(/^https?:\/\//, '')

          +e('span').country
            +e('img').country-flag(src='/img/flags/#{courseFeedback.country}.svg' width=16 height=12)
            +e('span').country-text
              = countries[courseFeedback.country].na
              if courseFeedback.city
                | ,&nbsp;
                = courseFeedback.city

          if courseFeedback.occupation
            +e('span').occupation= courseFeedback.occupation


      +e.line._editable
        +e('h2').title Имя
        +b.text-input
          +e('input').control(value=participant.fullName disabled)

      +e(class=["line", (courseFeedback.photo || user.photo) ? "_editable": ""])
        +e('h2').title Фото
        +b.upload-userpic(data-photo-load)
          input(type="hidden" name="photoId")
          +e('i').img(style="background-image: url('#{thumb(courseFeedback.photo || user.getPhotoUrl(), 64, 64)}')")
          +e('a').new(href="#") Загрузить новое фото


      +e.line._editable
        +e('h2').title Страна
        +b('select').input-select._small(name="country")
          each country in countries
            option(value=country.co selected=(country.co == courseFeedback.country))= country.na

      +e(class=["line", courseFeedback.city ? "_editable" : ""])
        +e('h2').title Город
        +b.text-input
          +e('input')(name="city" value=courseFeedback.city).control

      +e(class=["line", courseFeedback.occupation ? "_editable" : ""])
        +e('h2').title Область работы
        +b.text-input
          +e('input')(name="occupation" value=courseFeedback.occupation).control

      +e(class=["line", courseFeedback.aboutLink ? "_editable" : ""])
        +e('h2').title Профиль в соц. сети или личная страница, где можно узнать о вашей профессиональной деятельности
        +b.text-input
          +e('input').control(
            type="url"
            name="aboutLink"
            pattern=validate.patterns.webpageUrl
            value=courseFeedback.aboutLink
            placeholder="http://linkedin.com"
          )

        +e.note Эта ссылка будет доступна только в контексте вашего отзыва. Пожалуйста, укажите её.

      +e.line
        +b('button').button._action(type="submit") Отправить
