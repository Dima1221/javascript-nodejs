include _inline-slides

//- слайды двигать через transform: translate3d(-100%,0,0) у блока '#coursesReviewsSlider'
//- при достижении крайнего слайда - вешать на одну из стрелок модификатор 'courses-feedback-inline__control_hidden'

mixin courses-feedback-inline(data)
  - var feedbacks = data.feedbacks

  +b.courses-feedback-inline
    +e('h2').title Что говорят о курсах люди

    +e.slider
      +e.control._left._hidden
        +e.control-button._left
      +e.control._right
        +e.control-button._right

      +e.slides-wrapper
        +courses-feedback-slides(feedbacks).courses-feedback-inline__feedbacks

      - var page = 0
      +e('ul').pagination
        while page < feedbacks.length
          +e('li').page(class=(page === 0) ? 'courses-feedback-inline__page_active' : '')
          - page++
