.about-banner
  position relative
  min-height 380px
  color #fff
  background url('about-banner/header.jpg') no-repeat;
  background-size cover

  &__header
    position absolute
    top 75px
    width 100%
    text-align center

    +below('small-tablet')
      top 35px

  &__title
    font-size 24px
    font-weight normal
    line-height initial

    +below('small-tablet')
      font-size 18px

  &__name
    font-size 51px
    font-weight bold
    line-height 51px

    +below('small-tablet')
      font-size 40px
      line-height 40px

  &__line
    width 110px
    height 2px
    margin-top 42px
    border none
    background rgba(255, 255, 255, 0.2)

    +below('phone')
      display none
